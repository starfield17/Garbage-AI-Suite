{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Inference Response",
  "description": "Response format for inference operations",
  "type": "object",
  "properties": {
    "request_id": {
      "type": "string",
      "description": "Corresponding request ID"
    },
    "success": {
      "type": "boolean",
      "description": "Whether inference succeeded"
    },
    "error": {
      "type": "string",
      "description": "Error message if success is false"
    },
    "detections": {
      "type": "array",
      "description": "List of detected objects",
      "items": {
        "type": "object",
        "properties": {
          "class_id": {"type": "integer"},
          "class_name": {"type": "string"},
          "bbox": {
            "type": "object",
            "properties": {
              "x1": {"type": "number"},
              "y1": {"type": "number"},
              "x2": {"type": "number"},
              "y2": {"type": "number"}
            },
            "required": ["x1", "y1", "x2", "y2"]
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          }
        },
        "required": ["class_id", "class_name", "bbox"]
      }
    },
    "frame_meta": {
      "type": "object",
      "properties": {
        "width": {"type": "integer"},
        "height": {"type": "integer"},
        "timestamp": {"type": "string", "format": "date-time"}
      }
    },
    "inference_time_ms": {
      "type": "number",
      "minimum": 0,
      "description": "Time taken for inference in milliseconds"
    }
  },
  "required": ["success"]
}
