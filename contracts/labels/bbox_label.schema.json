{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Bounding Box Label",
  "description": "Simple JSON label format for bounding box annotations. Maintains backward compatibility with old project format.",
  "type": "object",
  "properties": {
    "labels": {
      "type": "array",
      "description": "List of bounding box labels",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Object class name (e.g., 'bottle', 'can', 'potato')"
          },
          "x1": {
            "type": "number",
            "minimum": 0,
            "description": "Bounding box top-left x coordinate (pixels)"
          },
          "y1": {
            "type": "number",
            "minimum": 0,
            "description": "Bounding box top-left y coordinate (pixels)"
          },
          "x2": {
            "type": "number",
            "minimum": 0,
            "description": "Bounding box bottom-right x coordinate (pixels)"
          },
          "y2": {
            "type": "number",
            "minimum": 0,
            "description": "Bounding box bottom-right y coordinate (pixels)"
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Detection confidence score (optional, 0-1)"
          }
        },
        "required": ["name", "x1", "y1", "x2", "y2"]
      }
    }
  },
  "required": ["labels"]
}
