{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Label Map",
  "description": "Mapping between class IDs, names, and groups",
  "type": "object",
  "properties": {
    "groups": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "minimum": 0,
            "description": "Group ID (e.g., 0-3 for 4 waste categories)"
          },
          "name": {
            "type": "string",
            "description": "Group canonical name (e.g., 'Kitchen_waste')"
          },
          "aliases": {
            "type": "array",
            "items": {"type": "string"},
            "description": "Alternative names that map to this group"
          }
        },
        "required": ["id", "name"]
      }
    }
  },
  "required": ["groups"]
}
