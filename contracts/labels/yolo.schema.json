{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "YOLO Label Format",
  "description": "YOLO detection label format (one annotation per line)",
  "properties": {
    "label_line": {
      "type": "string",
      "pattern": "^\\d+\\s+0\\.\\d+\\s+0\\.\\d+\\s+0\\.\\d+\\s+0\\.\\d+$",
      "description": "Format: <class_id> <x_center> <y_center> <width> <height> (all normalized 0-1)"
    }
  }
}
